<% @localized_order.each do |line_item| %>
  <tr class="<%= cycle('', 'alt') %> line-item">
    <td class="cart-item-image" data-hook="cart_item_image">
      <%= link_to image_tag(line_item[:image]), line_item[:path] %>
    </td>
    <td class="cart-item-description" data-hook="cart_item_description">
      <h4><%= link_to line_item[:name], line_item[:path] %></h4>
      <% if line_item[:insufficient_stock] %>
        <span class="out-of-stock">
          <%= Spree.t(:out_of_stock) %>&nbsp;&nbsp;<br />
        </span>
      <% end %>
    </td>
    <td class="cart-item-price" data-hook="cart_item_price">
      <%= flow_line_item_price(line_item) %>
    </td>
    <td class="cart-item-quantity" data-hook="cart_item_quantity">
      <input min="0" class="line_item_quantity" size="5" type="number" value="<%= line_item[:quantity] %>"  />
    </td>
    <td class="cart-item-total" data-hook="cart_item_total">
      <%= flow_line_item_price(line_item, line_item[:quantity]) %>
    </td>
    <td class="cart-item-delete" data-hook="cart_item_delete">
      <%= link_to image_tag('icons/delete.png'), '#', :class => 'delete' %>
    </td>
  </tr>
<% end %>
