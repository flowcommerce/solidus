<nav id="top-nav-bar" class="columns sixteen">
  <img
    style="width:32px; height: 32px; cursor: pointer; float: right; margin-left: 10px; margin-top: -6px;"
    onclick="$('#choose-experience').toggle();"
    src="<%= flow_flag(@flow_exp, 32) %>"
  />
  <div id="choose-experience" style="display: none;">
    <div
      style="position: absolute; z-index: 1; margin-top: -2px; margin-left: -270px; width: 250px;  border: 1px solid #aaa; background-color:#eee; padding: 10px 10px 0 10px; display: inline-block; text-align: left;"
      onclick="$('#choose-experience').toggle(200);"
    >
      <% for experience in Flow::Experience.all %>
        <a href="?flow_experience=<%= experience.key %>" style="display: block; margin-bottom: 10px;">
          <img style="width:32px; height: 32px; vertical-align: middle;" src="<%= flow_flag(experience, 32) %>" />
          <%= experience.name %>
        </a>
      <% end %>
    </div>
  </div>

  <ul id="nav-bar" class="inline" data-hook style="float: right;">
    <% if spree_current_user %>
      <li><%= link_to Spree.t(:logout), spree.logout_path %></li>
      <li><%= link_to Spree.t(:my_account), spree.account_path %></li>
    <% else %>
      <li id="link-to-login"><%= link_to Spree.t(:login), spree.login_path %></li>
    <% end %>
  </ul>

