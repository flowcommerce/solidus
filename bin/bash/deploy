#!/usr/bin/env bash

set -x

bin/remote sync_to_s3

source .env

rsync \
  -vrh \
  --executability \
  --delete \
  --exclude 'log/*' \
  --exclude '.env' \
  --exclude 'tmp/*' \
  --exclude '.git/*' \
  --exclude 'public/spree/*' \
  --exclude 'public/assets/*' \
  . $REMOTE_SERVER:$REMOTE_PATH

ssh -t $REMOTE_SERVER "
  echo '$REMOTE_PASS' | sudo -S echo '';
  set -x;
  cd $REMOTE_PATH
  bundle;
  rake db:migrate;
  rake assets:precompile;
  sudo service nginx restart;"
